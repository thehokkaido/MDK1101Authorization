<Window x:Class="_1101Para2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1101Para2"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Логин:" Margin="0,10,0,0"/>
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>

            <Button Content="Войти" Click="LoginButton_Click" Height="30" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
